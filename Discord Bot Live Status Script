import discord
from discord.ext import commands
from discord import Game
import os

intents = discord.Intents.default()
intents.members = True

bot = commands.Bot(command_prefix='!', intents=intents)

welcome_messages = [
    "Welcome {member.mention} to the Badnaam Ghar! Please take roles from ⁠Badnaam Ghar⁠roles and read the rules.",
    "Hey {member.mention}! Welcome to the server. We're glad to have you here! Please take roles from ⁠Badnaam Ghar⁠roles and read the rules.",
    "Welcome {member.mention}! Feel free to introduce yourself and enjoy your time in the server! Please take roles from ⁠Badnaam Ghar⁠roles and read the rules.",
    "Hello {member.mention}! Welcome to the Badnaam Ghar community. We hope you have a great time with us! Please take roles from ⁠Badnaam Ghar⁠roles and read the rules."
]

channel_ids = [1019299712794382456]  # List of channel IDs

@bot.event
async def on_member_join(member):
    guild = member.guild
    channel_id = random.choice(channel_ids)
    channel = guild.get_channel(channel_id)
    if channel is not None:
        welcome_message = random.choice(welcome_messages)
        await channel.send(welcome_message.format(member=member))

@bot.event
async def on_ready():
    print(f"Logged in as {bot.user.name}")
    status_message = "Hello, I'm a bot!"
    await bot.change_presence(activity=Game(name=status_message))

bot.run("here")
